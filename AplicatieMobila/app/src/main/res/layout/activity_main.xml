        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="3dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SO2"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                />
            <com.github.anastr.speedviewlib.TubeSpeedometer
                android:id="@+id/gauge_SO2"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_below="@+id/halfGauge"
                android:layout_gravity="center"
                app:sv_speedTextFormat="INTEGER"
                app:sv_speedTextPosition="TOP_CENTER"
                app:sv_speedTextSize="26dp"
                app:sv_speedometerWidth="10dp"
                app:sv_unit="ppb"
                app:sv_unitTextSize="10dp"
                app:sv_unitUnderSpeedText="true"
                app:sv_textSize="7dp"
                app:sv_speedTextColor="@color/colorPrimaryDark"
                app:sv_unitTextColor="@color/colorPrimaryDark"
                app:sv_speedometerBackColor="@color/cardview_shadow_start_color"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CO"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:textColor="@color/colorPrimaryDark"
                />
            <com.github.anastr.speedviewlib.TubeSpeedometer
                android:id="@+id/gauge_CO"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_below="@+id/halfGauge"
                android:layout_gravity="center"
                app:sv_speedTextFormat="INTEGER"
                app:sv_speedTextPosition="TOP_CENTER"
                app:sv_speedTextSize="26dp"
                app:sv_speedometerWidth="10dp"
                app:sv_unit="ppm"
                app:sv_unitTextSize="10dp"
                app:sv_unitUnderSpeedText="true"
                app:sv_textSize="7dp"
                app:sv_speedTextColor="@color/colorPrimaryDark"
                app:sv_unitTextColor="@color/colorPrimaryDark"
                app:sv_speedometerBackColor="@color/cardview_shadow_start_color"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NO2"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:textColor="@color/colorPrimaryDark"
                />
            <com.github.anastr.speedviewlib.TubeSpeedometer
                android:id="@+id/gauge_NO2"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_below="@+id/halfGauge"
                android:layout_gravity="center"
                app:sv_speedTextFormat="INTEGER"
                app:sv_speedTextPosition="TOP_CENTER"
                app:sv_speedTextSize="26dp"
                app:sv_speedometerWidth="10dp"
                app:sv_unit="ppb"
                app:sv_unitTextSize="10dp"
                app:sv_unitUnderSpeedText="true"
                app:sv_textSize="7dp"
                app:sv_speedTextColor="@color/colorPrimaryDark"
                app:sv_unitTextColor="@color/colorPrimaryDark"
                app:sv_speedometerBackColor="@color/cardview_shadow_start_color"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:orientation="vertical"


            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AQI"
                android:textSize="20dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginTop="50dp"

                />
            <com.github.anastr.speedviewlib.TubeSpeedometer
                android:id="@+id/gauge_AQI"
                android:layout_width="135dp"
                android:layout_height="135dp"
                android:layout_below="@+id/halfGauge"
                android:layout_gravity="center"
                android:layout_marginBottom="15dp"
                app:sv_speedTextFormat="INTEGER"
                app:sv_speedTextPosition="TOP_CENTER"
                app:sv_speedTextSize="48dp"
                app:sv_speedometerWidth="16dp"
                app:sv_unit="ppb"
                app:sv_unitTextSize="16dp"
                app:sv_textSize="13dp"
                app:sv_speedTextPadding="43dp"
                app:sv_unitUnderSpeedText="true"
                app:sv_speedTextColor="@color/colorPrimaryDark"
                app:sv_unitTextColor="@color/colorPrimaryDark"
                app:sv_speedometerBackColor="@color/cardview_shadow_start_color"/>

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spinnerChartInterval"
                android:layout_gravity="center"
                android:prompt="@array/spinnerChartIntervalArray"
                style="spinner"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:text="Show Charts"
                android:textStyle="italic"
                android:textAllCaps="false"
                android:layout_gravity="center"
                android:id="@+id/btnShowCharts"

                >

            </Button>

        </LinearLayout>

